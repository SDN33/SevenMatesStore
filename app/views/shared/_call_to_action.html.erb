<%
  base_class = 'w-fit py-3 px-7 rounded-full text-body-sm font-sans-md tracking-wider leading-none uppercase whitespace-nowrap transition-colors duration-200'
  
  cta_primary_class = 'bg-red-500 text-white hover:bg-red-700'
  cta_secondary_class = 'bg-white text-black hover:bg-gray-200 dark:text-sand dark:bg-gray-800 dark:hover:bg-gray-700'
  cta_tertiary_class = 'bg-black text-white dark:text-black dark:bg-white dark:hover:bg-gray-100'
  
  type = type.presence ? type : 'primary'
  cta_class = "#{base_class} #{type == 'primary' && cta_primary_class} #{type == 'secondary' && cta_secondary_class} #{type == 'tertiary' && cta_tertiary_class} #{defined?(additional_classes) ? additional_classes : ''}"
%>

<% if defined?(url) && url != nil %>
 <%= link_to label.html_safe, url, class: cta_class, target: defined?(target) ? target : '_self' %> 
<% else %>
  <%= button_tag(label.html_safe, class: cta_class, id: defined?(id) && id) %>
<% end %>
