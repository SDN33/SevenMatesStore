        <%= render "shared/social_icons" %>
      </div>
    </div>



  </div>
</footer>

<!-- Popup for legal mentions -->
<div id="legalMentionsPopup" class="legal-popup hidden">
  <div class="legal-popup-content">
    <span class="legal-popup-close">&times;</span>
    <h2>Mentions Légales</h2>
    <p>Vos mentions légales ici...</p>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const legalMentionsLink = document.getElementById('legalMentionsLink');
    const legalMentionsPopup = document.getElementById('legalMentionsPopup');
    const closePopup = legalMentionsPopup.querySelector('.legal-popup-close');
  
    legalMentionsLink.addEventListener('click', (event) => {
      event.preventDefault(); // Prevent the default link behavior
      legalMentionsPopup.classList.remove('hidden'); // Show the popup
    });
  
    closePopup.addEventListener('click', () => {
      legalMentionsPopup.classList.add('hidden'); // Hide the popup
    });
  
    window.addEventListener('click', (event) => {
      if (event.target === legalMentionsPopup) {
        legalMentionsPopup.classList.add('hidden'); // Hide the popup when clicking outside the content
      }
    });
  });
</script>
