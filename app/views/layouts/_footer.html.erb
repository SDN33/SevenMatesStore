      <div class="col-span-full md:mb-0">
        <%= image_tag "logo.png", class: "mx-auto w-14 mb-7 dark:hidden" %>
        <%= image_tag "logo.png", class: "mx-auto w-14 mb-7 hidden dark:block" %>
      </div>
      <div class="text-center mt-10 align-text-center">
        <a href="#" class="hover:underline mr-6 bebas-neue-regular">Conditions de vente</a>
