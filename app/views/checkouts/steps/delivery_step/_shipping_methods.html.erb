<ul class="shipping-methods">
  <% shipping_rates.each do |rate| %>
    <li class="shipping-methods__rate mb-6 last:mb-0">
      <%= form.label :selected_shipping_rate_id, value: rate.id, class: "radio-input flex gap-x-3 items-center last:mb-0" do %>
        <%= form.radio_button(:selected_shipping_rate_id, rate.id) %>
        <%= "#{rate.name} #{rate.display_cost}" %>
      <% end %>
    </li>
  <% end %>
</ul>
